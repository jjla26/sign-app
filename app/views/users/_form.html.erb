<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> al intentar guardar este Usuario:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'ConfirmaciÃ³n del password' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :last_log, 'Ãšltimo log-in' %>
    <%= form.datetime_select :last_log %>
  </div>

  <div class="field">
    <%= form.label :user_type, 'Tipo de usuario' %>
    <%= form.text_field :user_type %>
  </div>

  <div class="field">
    <%= form.label :active, 'Activo' %>
    <%= form.check_box :active %>
  </div>

  <div class="field">
    <%= form.label :comment, 'Comentario' %>
    <%= form.text_field :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
