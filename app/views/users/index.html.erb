<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<%= link_to 'Nuevo Usuario', new_user_path, id: 'new-button' %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Ultimo log-in</th>
      <th>Tipo de Usuario</th>
      <th>Activo</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.last_log %></td>
        <td><%= user.user_type %></td>
        <td><%= user.active %></td>
        <td><%= user.comment %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

